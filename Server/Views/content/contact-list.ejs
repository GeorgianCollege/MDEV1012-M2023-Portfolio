<!-- Create a contact list in a table format using ejs syntaxt -->
<div class="container">
  <h1>Contact List</h1>

  <a href="/add" class="btn btn-primary mb-2"><i class="fa-solid fa-square-plus fa-lg"></i> Add New Contact</a>

  <table class="table table-striped table-hover table-bordered border-dark">
    <thead class="table-dark">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email Address</th>
        <th scope="col">Contact Number</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach(function(contact) { %>
        <tr>
          <td><%= contact.FirstName %></td>
          <td><%= contact.LastName %></td>
          <td><%= contact.EmailAddress %></td>
          <td><%= contact.ContactNumber %></td>
          <td class="text-center"><a href="/edit/<%= contact._id %>" class="btn btn-primary"><i class="fa-solid fa-pen-to-square fa-lg"></i> Edit</a></td>
          <td class="text-center"><a href="/delete/<%= contact._id %>" class="btn btn-danger"><i class="fa-solid fa-trash-can fa-lg"></i> Delete</a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

</div>

